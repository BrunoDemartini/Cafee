<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/cafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Café"
                android:onClick="cafe"
                android:textAppearance="?android:textAppearanceMedium" />

            <RadioButton
                android:id="@+id/cafeLeite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Café com Leite"
                android:onClick="cafeleite"
                android:textAppearance="?android:textAppearanceMedium" />

            <RadioButton
                android:id="@+id/capuccino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capuccino"
                android:onClick="capuccino"
                android:textAppearance="?android:textAppearanceMedium" />
        </RadioGroup>

        <Button
            android:id="@+id/mais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:onClick="mais"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/quant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp" />

        <Button
            android:id="@+id/menos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:onClick="menos"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fazer Pedido: "
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pedido" />

        <TextView
            android:id="@+id/pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />

        <Button
            android:id="@+id/botao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fazer pedido"/>

    </LinearLayout>

</LinearLayout>